package game.entity;

import game.gfx.Screen;
import game.level.Level;
import game.level.tile.Tile;

import java.util.Random;

public abstract class Entity {

	protected int x = 100, y;
	protected boolean removed = false;
	protected Level level;
	protected final Random random = new Random();
	
	public void init(Level level) {
		this.level = level;
	}

	public void tick() {

	}

	public void render(Screen screen) {

	}

	public boolean hasCollided(int xDir, int yDir, int xPos, int yPos) {
		// test coordinates for the collision box
		// these variables should be specific for each mob since their collision box is different
		int xMin = 0;
		int xMax = 8;
		int yMin = 0;
		int yMax = 8;

		if (isSolidTile(xDir, yDir, xMin, yMin, xPos, yPos)) return true;
		if (isSolidTile(xDir, yDir, xMax, yMin, xPos, yPos)) return true;
		if (isSolidTile(xDir, yDir, xMin, yMax, xPos, yPos)) return true;
		if (isSolidTile(xDir, yDir, xMax, yMax, xPos, yPos)) return true;
		return false;
	}

	public boolean isSolidTile(int xDir, int yDir, int x, int y, int xPos, int yPos) {
		Tile newTile = level.getTile((xPos + x + xDir) >> 4, (yPos + y + yDir) >> 4);
		if (newTile.isSolid()) return true;
		return false;
	}

	public void remove() {
		removed = true;
	}

	public boolean isRemoved() {
		return removed;
	}
}
