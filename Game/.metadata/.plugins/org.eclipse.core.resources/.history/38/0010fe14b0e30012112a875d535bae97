package game.level.random;

public class Bound extends Room {

	public Bound(int w, int h, RandomLevel randomLevel, boolean bool) {
		super(w, h, randomLevel, bool);
	}
	
	protected void generateDimensinos(int w, int h, boolean bool) {
		width = (bool ? w : h);
		height = ((width == w) ? h : w);
		
		width += random.nextInt(w / 5);
		height += random.nextInt(w / 5);
		
		x = random.nextInt(level.getWidth() - width);
		y = random.nextInt(level.getHeight() - height);
	}

}
