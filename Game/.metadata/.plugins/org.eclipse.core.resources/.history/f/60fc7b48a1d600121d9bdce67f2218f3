package game.entity.mob.AI;

import game.gfx.Sprite;

public class Stalker extends AI{

	public Stalker() {
		sprite = sprite.rock;
		speed = 0.5;
		range = 200;
		xDir = 0.1;
		yDir = 0.1;
	}
	
	public void tick(int xPlayer, int yPlayer) {
		super.tick();
		
		getLineEquation(xPlayer, yPlayer);
		
		seenPlayer(xPlayer, yPlayer);
	}
	
	private void getLineEquation(int xPlayer, int yPlayer) {
		k = (yPlayer - y) / (xPlayer - x);
		m = y - k * x;
		System.out.println("y = " + k + "x + " + m);
		
	}
	
	protected boolean seenPlayer(int xPlayer, int yPlayer) {
		int tileSize = game.getTileSize();

		int x0 = (int) ((xPlayer < x) ? xPlayer : x) << 4;
		int x1 = (int) ((xPlayer > x) ? xPlayer : x) << 4;
		int y0 = (int) ((yPlayer < y) ? yPlayer : y) << 4;
		int y1 = (int) ((yPlayer > y) ? yPlayer : y) << 4;
		
		System.out.println("x0: " + x0);
		System.out.println("x1: " + x1);
		System.out.println("y0: " + y0);
		System.out.println("y1: " + y1);
		
		return true;
	}
}
