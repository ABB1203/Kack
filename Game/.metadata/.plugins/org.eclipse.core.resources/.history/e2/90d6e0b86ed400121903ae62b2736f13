package game.weapon;

import game.entity.mob.Player;
import game.gfx.Sprite;
import game.level.Level;

import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.RenderingHints;
import java.awt.geom.AffineTransform;
import java.io.IOException;

import javax.imageio.ImageIO;

public class Gun extends Weapon {

	public Gun() {
		this.sprite = Sprite.gun;
		try {
			image = ImageIO.read(Level.class.getResource("/weapons.png"));
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	int j = 0;

	public void render(Graphics g, int xOffset, int yOffset, Player player) {

		int x = player.getX() + player.getSprite().getSize() / 2;
		int y = player.getY() + player.getSprite().getSize() / 2;

		AffineTransform trans = new AffineTransform();

			j++;


		Graphics2D g2d = (Graphics2D) g;
		g2d.setRenderingHint(RenderingHints.KEY_ANTIALIASING, RenderingHints.VALUE_ANTIALIAS_ON);

		// replace 3 (the scale) with (jframe.width / width) to make it possible to work after
		// resizing the frame
		trans.scale(3, 3);
		trans.translate(x - xOffset, y - yOffset);
		trans.rotate(Math.toRadians(j/2));
		g2d.drawImage(image, trans, null);
	}
}
